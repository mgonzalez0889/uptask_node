<!DOCTYPE html>
html(lang="en")
    head
        include partial/header
    body
        header.barra
            h1 UpTask - Administrador de Proyectos                
            a(href="/cerrar-sesion") Cerrar Sesion

        main.contenedor 
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/nuevo-proyecto" class="boton") Nuevo Proyecto                        
                .panel.lista-proyectos
                    h2 Proyectos
                    ul#proyectos.proyecto
                       if(proyectos.length)
                        each proyecto in proyectos
                            li
                                a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre

            block contenido
            //- pre= vardump(proyectos)  
        script(src="/dist/bundle.js")                    

